{
	"name": "simpler-chrome",
	"private": true,
	"scripts": {
		"build": "node ./scripts/build && next export && mv out/_next out/next && sed -i '' -e 's/\\/_next/\\.\\/next/g' out/**.html && mv out/index.html ../extension && rsync -va --delete-after out/next/ ../extension/next/ && rm -rf out && rsync -va --delete-after public/assets ../extension/",
		"next": "node ./scripts/dev",
		"start": "node ./scripts/build && node ./scripts/start",
		"git:clean": "git clean -xdf && yarn",
		"git:unused": "next-unused",
		"tailwind": "tailwindcss -i ./design/styles/input.css -o ./design/styles/output.css --watch",
		"translate": "i18next --config lang.config.js"
	},
	"dependencies": {
		"i18next": "^21.8.12",
		"next": "^12.2.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-i18next": "^11.17.4"
	},
	"devDependencies": {
		"@tailwindcss/aspect-ratio": "^0.4.0",
		"@tailwindcss/forms": "^0.5.2",
		"@tailwindcss/typography": "^0.5.2",
		"autoprefixer": "^10.4.7",
		"inquirer": "^8.2.4",
		"next-unused": "^0.0.6",
		"postcss": "^8.4.14",
		"shelljs": "^0.8.5",
		"tailwindcss": "^3.0.24"
	},
	"next-unused": {
		"alias": {
			"+": "apis",
			"$": "content",
			"-": "contexts",
			"~": "design/elements",
			"^": "design/layouts",
			"@": "design/styles",
			"=": "hooks",
			"%": "lib"
		},
		"include": [
			"apis",
			"design",
			"hooks",
			"pages"
		],
		"entrypoints": [
			"pages"
		]
	}
}
